@model IEnumerable<Where2Go.Models.City>

<!DOCTYPE html>
    <html>
    <head>
        <title>
            Where2Go
        </title>

        <!-- CSS -->
        <style type="text/css">
            html,
            body {
                height: 100%;
            }

            body {
                background-image: url(https://64.media.tumblr.com/219713d1fbb6c2bdacd8ea7f0c36ae0b/f664e5e4fa4bbef4-1e/s640x960/9ec43d5419bd0b7c3d1770118b5806c3555aa172.png);
                background-repeat: no-repeat;
                background-size: 100% 92%;
            }
        </style>
    </head>
 
        <body>
            <h1 style="color: darkblue">
                Where2Go
            </h1>
            <b>
                Let's get to know Malta!
            </b>


            @using (Html.BeginForm("GetCityAndPOI", "StartPage", FormMethod.Post))
            {
                <p>
                    Where are you? Select a city from Malta:
                </p>
                @Html.DropDownList("CityName", new SelectList(Model, "Name", "Name"), "Select a city")


                <p>
                    Select the type of place you are looking for:
                    <select name="TypePOI" id="TypePOI">
                        <option value="restaurants">Restaurants</option>
                        <option value="hotels">Hotels</option>
                        <option value="museums">Museums</option>
                    </select>
                </p>

                <input type="submit" value="Show results" />
            }

        </body>

    </html>


    

